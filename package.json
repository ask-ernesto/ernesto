  },
  "keywords": [
    "ernesto",
    "mcp"
  ],
  "license": "ISC",
  "packageManager": "pnpm@10.22.0",
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "mcp-oauth-server": "^0.0.2",
    "prettier": "^3.7.3",
    "rollup": "^4.55.1",
